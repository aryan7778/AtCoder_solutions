#include <bits/stdc++.h>
#include <cstring>
#define fastIO ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

using namespace std;

int main(){
  fastIO
  int n;
  cin>>n;
  string str;
  cin>>str;
  int size=str.size();
  if(size<=n){
  	cout<<str;
  }
  else{
    
     for(int i=0;i<n;i++){
      cout<<str[i];
     }
      cout<< "...";


  }
  return 0;
}
